  <section id="bottom" class="w-full relative">
    <!-- Footer -->
    <footer class="rounded-lg shadow-lg bg-gray-800 w-full xl:w-[1120px] mx-auto relative z-20 -mb-10">
      <div class="w-full mx-auto max-w-screen-xl p-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <!-- Texto -->
        <span class="text-sm text-center sm:text-left sm:text-base text-violet-500">
