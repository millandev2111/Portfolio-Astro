---
import Container from "./Container.astro";
import ContactBox from "./ContactBox.astro";
import GitHub from "../icons/GitHub.astro";
import Gmail from "../icons/Gmail.astro";
import Instagram from "../icons/Instagram.astro";
import Fiver from "../icons/Fiver.astro";

---

<style>
  .cyber-grid {
    background-image: 
      linear-gradient(rgba(139, 92, 246, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(139, 92, 246, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: grid-move 20s linear infinite;
  }
  
  @keyframes grid-move {
    0% { transform: translate(0, 0); }
    100% { transform: translate(50px, 50px); }
  }
  
  .neon-text {
    text-shadow: 
      0 0 10px rgba(139, 92, 246, 0.8),
      0 0 20px rgba(139, 92, 246, 0.6),
      0 0 30px rgba(139, 92, 246, 0.4);
  }
  
  .pulse-ring {
    animation: pulse-ring 2s cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite;
  }
  
  @keyframes pulse-ring {
    0% {
      transform: scale(0.8);
      opacity: 1;
    }
    100% {
      transform: scale(1.5);
      opacity: 0;
    }
  }
  
  .floating {
    animation: floating 3s ease-in-out infinite;
  }
  
  @keyframes floating {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .hologram {
    background: linear-gradient(45deg, transparent 30%, rgba(139, 92, 246, 0.1) 50%, transparent 70%);
    background-size: 200% 200%;
    animation: hologram-shine 3s linear infinite;
  }
  
  @keyframes hologram-shine {
    0% { background-position: -200% -200%; }
    100% { background-position: 200% 200%; }
  }
</style>

<section id="bottom" class="w-full relative overflow-hidden">
  <!-- Animated Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-black via-purple-950/20 to-purple-900/40"></div>
  <div class="cyber-grid absolute inset-0 opacity-30"></div>
  
  <!-- Glowing Orbs -->
  <div class="absolute top-20 left-1/4 w-64 h-64 bg-purple-500/20 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-40 right-1/4 w-96 h-96 bg-violet-500/15 rounded-full blur-3xl animate-pulse" style="animation-delay: -1s;"></div>
  
  <!-- Footer -->
  <footer class="relative z-20 -mb-10">
    <div class="bg-gradient-to-r from-purple-950/80 to-violet-950/80 backdrop-blur-xl border-t border-purple-500/20 shadow-2xl shadow-purple-900/50 rounded-t-3xl mx-auto max-w-7xl">
      <div class="hologram absolute inset-0 rounded-t-3xl"></div>
      <div class="relative z-10 w-full mx-auto max-w-screen-xl p-8 flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <!-- Copyright Text -->
        <div class="flex items-center gap-3">
