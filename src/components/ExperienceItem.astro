---
interface Props {
    title: string
    description: string
    link?: string
    date: string
}
const {title, description, date, link} = Astro.props
---

<!-- Date with futuristic styling -->
<time class="inline-block mb-3 px-3 py-1 text-sm font-medium leading-none bg-gradient-to-r from-purple-600/20 to-violet-600/20 text-purple-200 rounded-full border border-purple-500/30 backdrop-blur-sm">
    {date}
</time>

<!-- Title with gradient and glow -->
<h3 class="text-xl font-bold bg-gradient-to-r from-purple-300 via-violet-300 to-purple-400 bg-clip-text text-transparent mb-3 hover:from-purple-200 hover:via-violet-200 hover:to-purple-300 transition-all duration-300">
    {title}
</h3>

<!-- Description with enhanced readability -->
<p class="mb-6 text-base font-normal text-gray-200/90 text-pretty leading-relaxed">
    {description}
</p>

<!-- Enhanced link button -->
{
    link && (
        <a 
            href={link} 
            class="group inline-flex items-center px-6 py-3 text-sm font-medium bg-gradient-to-r from-purple-600 to-violet-600 text-white rounded-lg hover:from-purple-700 hover:to-violet-700 transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/25 hover:scale-105 border border-purple-500/50 backdrop-blur-sm"
        >
            <span class="mr-2">Learn more</span>
            
            <!-- Animated arrow with glow -->
            <div class="relative">
                <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
                
                <!-- Glow effect on arrow -->
                <div class="absolute inset-0 bg-white/20 rounded-full blur-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
            
            <!-- Hover particles -->
            <div class="absolute inset-0 overflow-hidden rounded-lg">
                <div class="absolute top-1/2 left-1/2 w-2 h-2 bg-white/30 rounded-full transform -translate-x-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 group-hover:animate-ping"></div>
            </div>
        </a>
    )
}

<!-- Decorative elements -->
<div class="absolute -top-2 -right-2 w-1 h-1 bg-purple-400/50 rounded-full animate-ping delay-500"></div>
<div class="absolute -bottom-2 -left-2 w-1.5 h-1.5 bg-violet-400/50 rounded-full animate-ping delay-1000"></div>