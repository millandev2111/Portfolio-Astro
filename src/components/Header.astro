<header class="fixed top-0 left-0 w-full bg-gradient-to-r from-purple-900/20 via-violet-900/20 to-purple-900/20 backdrop-blur-xl border-b border-purple-500/20 flex justify-center items-center py-4 z-50 shadow-lg shadow-purple-900/20">
  
  <!-- Logo Glow Effect -->
  <div class="absolute left-6 top-1/2 transform -translate-y-1/2 w-3 h-3 bg-gradient-to-r from-purple-400 to-violet-500 rounded-full shadow-lg shadow-purple-500/80 animate-pulse"></div>
  
  <!-- Navigation Menu Container -->
  <nav class="relative bg-black/20 backdrop-blur-sm border border-purple-500/30 rounded-full px-8 py-3 shadow-xl shadow-purple-900/30 hover:border-purple-400/50 hover:shadow-purple-500/40 transition-all duration-500">
    
    <!-- Scan Line Effect -->
    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-purple-400/20 to-transparent rounded-full opacity-0 hover:opacity-100 hover:animate-pulse transition-opacity duration-300"></div>
    
    <!-- Navigation Links -->
    <div class="relative flex flex-row gap-x-8 sm:gap-x-12 text-purple-200 text-sm sm:text-base font-medium">
      
      <a href="#top" class="relative group transition-all duration-300 hover:text-purple-100 hover:-translate-y-0.5 hover:drop-shadow-lg">
        <span class="relative z-10">Home</span>
        <!-- Hover Background Glow -->
        <div class="absolute inset-0 bg-purple-500/20 rounded-full scale-0 group-hover:scale-150 transition-transform duration-500 opacity-0 group-hover:opacity-100 blur-sm"></div>
        <!-- Bottom Line -->
        <span class="absolute -bottom-2 left-0 w-0 h-0.5 bg-gradient-to-r from-purple-400 to-violet-500 group-hover:w-full transition-all duration-500 shadow-sm shadow-purple-400"></span>
      </a>
      
      <a href="#experience" class="relative group transition-all duration-300 hover:text-purple-100 hover:-translate-y-0.5 hover:drop-shadow-lg">
        <span class="relative z-10">Experience</span>
        <div class="absolute inset-0 bg-purple-500/20 rounded-full scale-0 group-hover:scale-150 transition-transform duration-500 opacity-0 group-hover:opacity-100 blur-sm"></div>
        <span class="absolute -bottom-2 left-0 w-0 h-0.5 bg-gradient-to-r from-purple-400 to-violet-500 group-hover:w-full transition-all duration-500 shadow-sm shadow-purple-400"></span>
      </a>
      
      <a href="#projects" class="relative group transition-all duration-300 hover:text-purple-100 hover:-translate-y-0.5 hover:drop-shadow-lg">
        <span class="relative z-10">Projects</span>
        <div class="absolute inset-0 bg-purple-500/20 rounded-full scale-0 group-hover:scale-150 transition-transform duration-500 opacity-0 group-hover:opacity-100 blur-sm"></div>
        <span class="absolute -bottom-2 left-0 w-0 h-0.5 bg-gradient-to-r from-purple-400 to-violet-500 group-hover:w-full transition-all duration-500 shadow-sm shadow-purple-400"></span>
      </a>
      
      <a href="#bottom" class="relative group transition-all duration-300 hover:text-purple-100 hover:-translate-y-0.5 hover:drop-shadow-lg">
        <span class="relative z-10">Contact</span>
        <div class="absolute inset-0 bg-purple-500/20 rounded-full scale-0 group-hover:scale-150 transition-transform duration-500 opacity-0 group-hover:opacity-100 blur-sm"></div>
        <span class="absolute -bottom-2 left-0 w-0 h-0.5 bg-gradient-to-r from-purple-400 to-violet-500 group-hover:w-full transition-all duration-500 shadow-sm shadow-purple-400"></span>
      </a>
      
    </div>
  </nav>
  
  <!-- Floating Particles -->
  <div class="absolute top-2 right-6 w-1 h-1 bg-purple-400 rounded-full animate-ping opacity-60"></div>
  <div class="absolute top-6 right-12 w-0.5 h-0.5 bg-violet-500 rounded-full animate-pulse opacity-40"></div>
  <div class="absolute bottom-3 left-12 w-1 h-1 bg-purple-300 rounded-full animate-bounce opacity-50"></div>
  
  <!-- Corner Glow Effects -->
  <div class="absolute top-0 left-0 w-32 h-32 bg-purple-500/10 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute top-0 right-0 w-24 h-24 bg-violet-500/10 rounded-full blur-2xl animate-pulse" style="animation-delay: -1s;"></div>
  
</header>